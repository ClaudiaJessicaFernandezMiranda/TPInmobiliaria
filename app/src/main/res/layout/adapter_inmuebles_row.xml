<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/prueba"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivInmueble"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="11dp"
        android:background="@drawable/inmueble" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvXADireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:text="Direccion" />

        <TextView
            android:id="@+id/tvXAAmbientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:text="Ambientes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tvXAUso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:text="Uso" />

            <ToggleButton
                android:id="@+id/tvXADesHab"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textOff=""
                android:textOn=""
                android:focusable="false"
                android:layout_gravity="bottom|right"
                android:background="@drawable/toggle_boton"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>